<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_ChatBot">

    <EditText
        android:id="@+id/etn_chatbot_user_input_text"
        android:layout_width="369dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/chatbot_user_input"
        android:ems="10"
        android:gravity="center|left"
        android:hint="  궁금한 사항을 입력해주세요."
        android:inputType="textPersonName"
        android:scaleType="fitXY"
        android:textColorHint="#4A4A4A"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_chatbot_today"
        android:layout_width="144dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/chatbot_today"
        android:gravity="center"
        android:text="오늘 날짜 출력"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>